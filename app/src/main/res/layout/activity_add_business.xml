<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chico_ent.layout.addBusiness">

    <EditText
        android:id="@+id/businessName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Business Name"
        android:layout_margin="@dimen/halfspacing" />

    <EditText
        android:id="@+id/businessDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/businessName"
        android:ems="10"
        android:hint="Business Description"
        android:layout_margin="@dimen/halfspacing" />

    <EditText
        android:id="@+id/businessPictureURL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/businessDescription"
        android:ems="10"
        android:hint="Business Picture URL"
        android:layout_margin="@dimen/halfspacing" />

    <EditText
        android:id="@+id/businessLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/businessPictureURL"
        android:ems="10"
        android:hint="Business Street Address"
        android:layout_margin="@dimen/halfspacing" />

    <Button
        android:id="@+id/submit"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/businessLocation"
        android:layout_centerHorizontal="true"
        android:elevation="24dp"
        android:layout_margin="@dimen/halfspacing"
        android:text="Create Business" />

</RelativeLayout>
